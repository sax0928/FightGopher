<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LV2_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sand"
    tools:context=".activityclass.LevelTwoActivity">


    <fragment
        android:id="@+id/LV2_ftagmentGameStart"
        android:name="project.fightgopher.FragmentGameMenu"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="0dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/LV2_imgCountingNumber"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/LV2_ftagmentGameStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/countdownbg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LV2_ftagmentGameStart"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/LV2_linearLayout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/LV2_hole01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV2_hole02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV2_hole03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LV2_linearLayout03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/LV2_linearLayout02"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/LV2_hole04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV2_hole05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV2_hole06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV2_hole07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LV2_linearLayout04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/LV2_linearLayout03"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/LV2_hole08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV2_hole10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV2_hole09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/fragmentTimeBar"
        android:name="project.fightgopher.FragmentTimeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LV1_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    tools:context=".activityclass.LevelOneActivity">


    <fragment
        android:id="@+id/LV1_ftagmentGameStart"
        android:name="project.fightgopher.FragmentGameMenu"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="0dp"
        android:layout_marginTop="0dp" />


    <ImageView
        android:id="@+id/LV1_imgCountingNumber"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/LV1_ftagmentGameStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/countdownbg" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LV1_imgCountingNumber"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:weightSum="4">


            <ImageView
                android:id="@+id/LV1_hole01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV1_hole02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV1_hole03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/LV1_hole04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV1_hole05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV1_hole06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:gravity="center_horizontal"
            android:weightSum="4">


            <ImageView
                android:id="@+id/LV1_hole07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV1_hole08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

            <ImageView
                android:id="@+id/LV1_hole09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hole_1" />

        </LinearLayout>

    </RelativeLayout>

    <fragment
        android:id="@+id/fragmentTimeBar"
        android:name="project.fightgopher.FragmentTimeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />


</RelativeLayout>
